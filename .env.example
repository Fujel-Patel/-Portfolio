# ── Portfolio Environment Variables ──────────────────
# Copy this file to .env.local and fill in your values.
# Vite exposes vars prefixed with VITE_ to the client.

# Site metadata
VITE_SITE_URL=https://your-domain.com
VITE_SITE_TITLE=Your Name — Portfolio
VITE_SITE_DESCRIPTION=Immersive developer portfolio powered by Three.js & React

# Google Analytics (optional — leave blank to disable)
VITE_GA_MEASUREMENT_ID=

# Contact / Social
VITE_CONTACT_EMAIL=hello@your-domain.com
VITE_GITHUB_URL=https://github.com/your-username
VITE_LINKEDIN_URL=https://linkedin.com/in/your-username
VITE_TWITTER_URL=https://twitter.com/your-username

# Feature flags
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_PERFORMANCE_OVERLAY=false
